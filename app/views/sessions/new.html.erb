<div class="container">
   <div class="ui center aligned basic segment">
    <div class="column">
      <div class="ui column grid ">
        <div class="ui fluid card chatbox">
          <div class ="extra content">
            <div class ="footer"><strong> Welcome to !YAP the chat app.</strong>
              <p> Please enter the details for your account which you registered with. </p>
              <p> If you have not yet signed up. Please use the Account tab in the navigation bar </p>
              </div>
                <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
                  <div class="field">
                    <div class="ui left icon input">
                      <%= f.text_field :username, placeholder: "Please enter your username" %>
                      <i class="user icon"></i>
                    </div>
                  </div>
                  <div class="field">
                    <div class="ui left icon input">
                      <%= f.password_field :password, placeholder: "Please enter your password" %>
                      <i class="lock icon"></i>
                    </div>
                  </div>
                  <%= f.button "Login", class: "ui primary submit button" %>
                  <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
